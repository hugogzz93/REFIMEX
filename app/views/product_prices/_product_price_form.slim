- previous = parent.active_product_price || ProductPrice.new
= simple_form_for object do |f|
  .form-inputs
    = f.input :product_id, input_html: { value: parent.id }, as: :hidden
    .row
      .col
        = f.input :final_price, required: true, label: t(:final_price), input_html: { value: previous.final_price}
      .col
        = f.input :valid_quote, required: true, label: t(:valid_quote), input_html: { value: previous.valid_quote}
      .col
        = f.input :state_quote, required: true, label: t(:state_quote), input_html: { value: previous.state_quote}
      .col
        = f.input :carbon_tax, required: true, label: t(:carbon_tax), input_html: { value: previous.carbon_tax}
    .row
      .col
        = f.input :active_date, as: :string, readonly: true, label: t(:active_date), input_html: { value: Time.zone.now.strftime('%d-%m-%Y') }
  .form-actions
    = f.button :submit, t(:save).capitalize, class: 'btn-primary'
