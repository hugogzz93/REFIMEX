table.table
  thead
    tr
      th = t(:date_f).capitalize
      th = t(:valid_quote)
      th = t(:state_quote)
      th = t(:carbon_tax)
      th = t(:final_price)
      - if current_user.admin?
        th = t(:actions).capitalize

  tbody
    - objects.each do |u|
      tr
        td = u.active_date.strftime("%B %d, %Y")
        td = u.valid_quote
        td = u.state_quote
        td = u.carbon_tax
        td = u.final_price
        - if current_user.admin?
          td 
            span.badge.badge-danger
              = link_to t(:delete).capitalize, send("delete_#{u.class.name.underscore}_path", u),
                                  method: :delete
